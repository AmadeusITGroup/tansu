{
  "name": "@amadeus-it-group/tansu",
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.2.4",
    "@angular/cli": "^15.2.4",
    "@angular/common": "^15.2.3",
    "@angular/compiler": "^15.2.3",
    "@angular/compiler-cli": "^15.2.3",
    "@angular/core": "^15.2.3",
    "@angular/platform-browser": "^15.2.3",
    "@angular/platform-browser-dynamic": "^15.2.3",
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@microsoft/api-documenter": "^7.21.6",
    "@microsoft/api-extractor": "^7.34.4",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/jasmine": "^4.3.1",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "jasmine-core": "^4.6.0",
    "jasmine-spec-reporter": "^7.0.0",
    "karma": "^6.4.1",
    "karma-chrome-launcher": "^3.1.1",
    "karma-coverage": "^2.2.0",
    "karma-jasmine": "^5.1.0",
    "karma-jasmine-html-reporter": "^2.0.0",
    "prettier": "^2.8.6",
    "pretty-quick": "^3.1.3",
    "rollup": "^3.20.0",
    "rxjs": "^7.8.0",
    "svelte": "^3.57.0",
    "typescript": "^5.0.2",
    "zone.js": "^0.13.0"
  },
  "scripts": {
    "test": "ng test -c ci",
    "test-tdd": "ng test",
    "clean": "rm -rf dist temp",
    "lint": "eslint src/{,**/}*.ts",
    "build:rollup": "rollup --failAfterWarnings -c",
    "build:dts": "tsc -p tsconfig.d.json",
    "build:api": "api-extractor run",
    "build:package": "cp README.md src/package.json dist/package",
    "build": "yarn clean && yarn build:rollup && yarn build:dts && yarn build:api && yarn build:package",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "docs": "api-documenter markdown -i temp -o dist/docs"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "pretty-quick --staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "packageManager": "yarn@3.2.4"
}
